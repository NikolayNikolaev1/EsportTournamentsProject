@model EndTournamentViewModel
@{
    ViewData["Title"] = "Choose A Winner";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="End" asp-route-id="@Model.Id" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId"></label>
                <select asp-for="TeamId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="End Tournament" />
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
