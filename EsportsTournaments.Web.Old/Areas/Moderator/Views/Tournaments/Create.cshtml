@model CreateTournamentFormModel

@{
    ViewData["Title"] = "Create Tournament";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prize"></label>
                <select asp-for="Prize" asp-items="Html.GetEnumSelectList<PrizeType>()" class="form-control"></select>
                <span asp-validation-for="Prize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameId"></label>
                <select asp-for="GameId" asp-items="Model.Games" class="form-control"></select>
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create Tournament</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
