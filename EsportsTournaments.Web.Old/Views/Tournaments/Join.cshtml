@model JoinTournamentViewModel
@{
    ViewData["Title"] = "Join Tournament";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Join" asp-route-id="@Model.Id" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId"></label>
                <select asp-for="TeamId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Join Tournament" />
        </form>
    </div>
</div>