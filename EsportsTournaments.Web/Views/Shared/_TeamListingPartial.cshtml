@model ICollection<TeamListingServiceModel>
@*
    Partial for tab listing user Created or Joined Teams.
*@
<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            @foreach (var team in Model)
            {
            <a class="list-group-item list-group-item-action @(Model.FirstOrDefault() == team ? "active" : string.Empty)" id="list-team-@team.Id-list" data-toggle="list" href="@($"#list-team-{team.Id}")" role="tab" aria-controls="home">
                <img src="~/images/@team.Image" class="rounded-circle" height="40" width="40" />
                @team.Name
            </a>
            }

        </div>
    </div>
    <div class="col-8 table-bordered border-primary">
        <div class="tab-content" id="nav-tabContent">

            @foreach (var team in Model)
            {
                <div class="tab-pane fade @(Model.FirstOrDefault() == team ? "show active" : string.Empty)" id="list-team-@team.Id" role="tabpanel" aria-labelledby="list-team-@team.Id-list">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/images/@team.Image" class="rounded-circle" height="150" width="150" alt="@team.Name" />
                        </div>

                        <div class="col-md-8 pt-5">
                            <h3>@team.Name</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>