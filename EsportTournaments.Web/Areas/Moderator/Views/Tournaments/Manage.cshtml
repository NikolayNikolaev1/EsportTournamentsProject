@model ManageTournamentViewModel

@{
    ViewData["Title"] = "Management";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Tournament.HasEnded == true)
{
    <h2>ENDED</h2>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <a class="btn btn-primary btn-block" asp-area="Moderator" asp-controller="Tournaments" asp-route-id="@Model.Id" asp-action="Start">Start Tournament</a>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <a class="btn btn-primary btn-block" asp-area="Moderator" asp-controller="Tournaments" asp-route-id="@Model.Id" asp-action="End">End Tournament</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
